<!DOCTYPE html>
<html lang="en">
<head>
  <title>Scribe</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <script src="http://code.jquery.com/jquery-latest.min.js"
        type="text/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="/js/main.js"></script>
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css"
        href="https://fonts.googleapis.com/css?family=Roboto">
</head>
<body>
<h1>Scribe</h1>
<div id="demo" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">
  <!-- The slideshow -->
  <div class="carousel-inner">
    <div class="carousel-item active" id="record-page">
    <div class="row">
      <div class="col-sm-12">
        <div class="text-center">
        <form action="/filename" method="GET">
            <input type="text" name="filenameinput" value="" required />
	    <button class="btn btn-success btn-lg" id="singlebutton"> Upload</button>
	</form>
	<br />
	<br />
        <button class="btn btn-success btn-lg" id="start-btn">Start recording</button>
          <button class="btn btn-success btn-lg" id="stop-btn" disabled>Stop recording</button>
        </div>
      <br />
      <br />
        <li><a class="inclusion" id="slack"><i class="fa fa-phone"></i><span>Contact Support</span></a></li> </form>
      </div>
    </div>
    </div>
    <div class="carousel-item" id="text-page">
        <div class="my-text" contenteditable>
	    <%- text %>
        </div>
    </div>
    <div class="carousel-item" id="send-page">
    <h2>Send Text to:</h2>
      <ul>
      <form action="/slack" method="POST">
      <li><a class="inclusion" id="slack"><i class="fa fa-slack"></i><span>Slack</span></a></li> </form>
      <li><a class="inclusion" id="email"><i class="fa fa-envelope"></i><span>E-mail</span></a></li>
      </ul>
    </div>
    <div class="carousel-item" id="input-page">
      <div class="form-group" id="email-form">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" value="">
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>

</body>
</html>
